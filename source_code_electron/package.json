{
  "name": "microsoft-office-365",
  "productName": "Microsoft Office 365",
  "icon": "icon/microsoft-office-365.ico",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:linux": "electron-builder --linux AppImage",
    "build:win": "electron-builder --win portable"
  },
  "devDependencies": {
    "electron": "^29.4.6",
    "electron-builder": "^24.6.3"
  },
  "build": {
    "appId": "com.microsoftoffice365.electron",
    "linux": {
      "target": "AppImage",
      "category": "Development"
    },
    "win": {
      "icon": "icon/microsoft-office-365.ico",
      "target": "portable"
    }
  },
  "dependencies": {
    "electron-settings": "^4.0.4"
  }
}
